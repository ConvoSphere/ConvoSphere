# Local Development Environment Configuration
# Copy this file to .env.local and adjust values as needed

# Application Settings
APP_NAME=AI Assistant Platform
APP_VERSION=0.1.2 Beta
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
FRONTEND_PORT=5173

# Frontend-Backend Communication Configuration
# These variables control how the frontend connects to the backend
BACKEND_URL=http://localhost:8000
WS_URL=ws://localhost:8000
FRONTEND_URL=http://localhost:5173

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8081

# Database Configuration
DATABASE_URL=postgresql://convosphere:convosphere_password@localhost:5432/convosphere
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Providers (set your API keys)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# LiteLLM Configuration
LITELLM_MODEL=gpt-4
LITELLM_MAX_TOKENS=4096
LITELLM_TEMPERATURE=0.7

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_BUCKET_NAME=knowledge-base

# MinIO Configuration (default cloud storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# S3 Configuration (alternative)
# STORAGE_PROVIDER=s3
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_ACCESS_KEY_ID=your_access_key
# S3_SECRET_ACCESS_KEY=your_secret_key
# S3_REGION=us-east-1

# GCS Configuration (alternative)
# STORAGE_PROVIDER=gcs
# GCS_PROJECT_ID=your_project_id
# GCS_CREDENTIALS_FILE=path/to/credentials.json

# Azure Configuration (alternative)
# STORAGE_PROVIDER=azure
# AZURE_ACCOUNT_NAME=your_account_name
# AZURE_ACCOUNT_KEY=your_account_key
# AZURE_CONNECTION_STRING=your_connection_string

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,de,fr,es

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# External Services (optional)
SERPER_API_KEY=
WOLFRAM_ALPHA_API_KEY=

# Frontend Environment Variables (for Vite)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_ENABLE_DEBUG=true 