# Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values
# NEVER commit the actual .env.prod file to version control

# Application Settings
APP_NAME=ConvoSphere AI Assistant Platform
APP_VERSION=0.1.2 Beta
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
FRONTEND_PORT=80

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/convosphere
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100

# PostgreSQL Configuration (for Docker)
POSTGRES_DB=convosphere
POSTGRES_USER=convosphere
POSTGRES_PASSWORD=your-secure-postgres-password-minimum-32-chars

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_DB=0

# Security
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secure-secret-key-minimum-64-characters-generate-this-securely
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Default User Creation (DISABLED in production)
# Only enable for initial setup, then disable immediately
CREATE_DEFAULT_ADMIN=false
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password

CREATE_DEFAULT_ASSISTANT=false
DEFAULT_ASSISTANT_NAME=Default Assistant
DEFAULT_ASSISTANT_DESCRIPTION=A general-purpose AI assistant for everyday tasks
DEFAULT_ASSISTANT_SYSTEM_PROMPT=You are a helpful AI assistant that can help with various tasks including answering questions, writing content, and solving problems.
DEFAULT_ASSISTANT_MODEL=gpt-4

# SSO Configuration
# Google OAuth2
SSO_GOOGLE_ENABLED=false
SSO_GOOGLE_CLIENT_ID=your-google-client-id
SSO_GOOGLE_CLIENT_SECRET=your-google-client-secret
SSO_GOOGLE_REDIRECT_URI=https://yourdomain.com/api/v1/auth/sso/callback/google

# Microsoft OAuth2
SSO_MICROSOFT_ENABLED=false
SSO_MICROSOFT_CLIENT_ID=your-microsoft-client-id
SSO_MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
SSO_MICROSOFT_REDIRECT_URI=https://yourdomain.com/api/v1/auth/sso/callback/microsoft
SSO_MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# GitHub OAuth2
SSO_GITHUB_ENABLED=false
SSO_GITHUB_CLIENT_ID=your-github-client-id
SSO_GITHUB_CLIENT_SECRET=your-github-client-secret
SSO_GITHUB_REDIRECT_URI=https://yourdomain.com/api/v1/auth/sso/callback/github

# SAML Configuration
SSO_SAML_ENABLED=false
SSO_SAML_METADATA_URL=https://your-idp.com/metadata
SSO_SAML_ENTITY_ID=https://yourdomain.com
SSO_SAML_ACS_URL=https://yourdomain.com/api/v1/auth/sso/callback/saml
SSO_SAML_CERT_FILE=./certs/saml.crt
SSO_SAML_KEY_FILE=./certs/saml.key

# OIDC Configuration
SSO_OIDC_ENABLED=false
SSO_OIDC_ISSUER_URL=https://your-oidc-provider.com
SSO_OIDC_CLIENT_ID=your-oidc-client-id
SSO_OIDC_CLIENT_SECRET=your-oidc-client-secret
SSO_OIDC_REDIRECT_URI=https://yourdomain.com/api/v1/auth/sso/callback/oidc

# AI Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# LiteLLM Configuration
LITELLM_MODEL=gpt-4
LITELLM_MAX_TOKENS=4096
LITELLM_TEMPERATURE=0.7
LITELLM_PROXY_HOST=your-litellm-proxy-host

# Weaviate Configuration
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,de,fr,es

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60
PASSWORD_RESET_BASE_URL=https://yourdomain.com

# Rate Limiting Configuration
PASSWORD_RESET_RATE_LIMIT_IP_MAX=5
PASSWORD_RESET_RATE_LIMIT_EMAIL_MAX=3
PASSWORD_RESET_RATE_LIMIT_WINDOW=3600

# CSRF Protection Configuration
CSRF_TOKEN_EXPIRE_MINUTES=30
CSRF_PROTECTION_ENABLED=true

# External Services
SERPER_API_KEY=your-serper-api-key  # For web search
WOLFRAM_ALPHA_API_KEY=your-wolfram-api-key  # For calculations

# Frontend-Backend Communication Configuration
BACKEND_URL=https://yourdomain.com
WS_URL=wss://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# CORS Configuration
# In production, only allow HTTPS origins and specific domains
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com